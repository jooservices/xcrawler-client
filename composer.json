{
    "name": "jooservices/xcrawler-client",
    "description": "Wrapper for Guzzle HTTP Client",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jooservices\\XcrawlerClient\\": "src/",
            "Jooservices\\XcrawlerClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "8.*",
        "guzzlehttp/guzzle": "^7.4",
        "psr/log": "^1.1",
        "monolog/monolog": "^2",
        "nesbot/carbon": "^2.50",
        "symfony/dom-crawler": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.4",
        "kevinrob/guzzle-cache-middleware": "^4",
        "fakerphp/faker": "^1",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "*",
        "rector/rector": "*"
    },
    "scripts": {
        "lint": [
            "@php vendor/bin/phpstan analyze --level=0 src"
        ]
    },
    "authors": [
        {
            "name": "Viet Vu",
            "email": "jooservices@gmail.com"
        }
    ]
}
